{
    "manifest_version": 3,
    "name": "HelpMeOut",
    "version": "1.0",
    "description": "A screen and audio recording extension",
    "permissions": [
      "activeTab",
      "tabs",
      "scripting",
      "desktopCapture"
    ],
    "action": {
        "default_title": "HelpMeOut",
        "default_popup": "index.html",
        "default_icon": {
          "16": "/images/v2.png",
          "32": "/images/v3.png",
          "48": "/images/v1.png",
          "64": "/images/v0.png",
          "96": "/images/v1.png",
          "128": "/images/v1.png"
        }
      },
      "icons": {
        "16": "/images/v2.png",
        "32": "/images/v3.png",
        "48": "/images/v1.png",
        "64": "/images/v0.png",
        "96": "/images/v1.png",
        "128": "/images/v1.png"
      },
    "background": {
      "service_worker": "background.js"
    },
    "host_permissions": [
        "http://*/",
        "https://*/*"
    ]
  }
  